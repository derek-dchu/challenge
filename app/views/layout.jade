doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    block title
      title= title
    block css
      link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", rel="stylesheet")
      link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css", rel="stylesheet")
      link(rel='stylesheet', href='/css/style.css')
    block js
      script(src='https://code.jquery.com/jquery-2.1.3.min.js')
      script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")
      script(src='http://localhost:35729/livereload.js')
  body
    block header
      nav.navbar.navbar-inverse
        div.container-fluid
          div.navbar-header
            button(type="button" data-toggle="collapse" data-target="#navbar-collapse-group").navbar-toggle.collapsed
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a(href="#").navbar-brand 500px-Grid
            form(role="search" action="/category" method="POST").navbar-form.navbar-left
              div.form-group
                input(type="text", placeholder="Tag" name="tag")#search-tag.form-control
              button(type="submit").btn.btn-primary search
          div#navbar-collapse-group.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li: a(href="/contact") Contact
              li: a(href="/about") About

    block content
    block footer

    block body-js
